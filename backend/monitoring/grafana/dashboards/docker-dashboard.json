{
  "dashboard": {
    "id": null,
    "title": "Fluently Docker Containers Dashboard",
    "tags": ["fluently", "docker", "containers"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Container CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\".+\"}[5m]) * 100",
            "legendFormat": "{{ name }}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "yAxes": [
          {
            "unit": "percent"
          }
        ]
      },
      {
        "id": 2,
        "title": "Container Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\".+\"} / 1024 / 1024",
            "legendFormat": "{{ name }}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "yAxes": [
          {
            "unit": "megabytes"
          }
        ]
      },
      {
        "id": 3,
        "title": "Container Network I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{name=~\".+\"}[5m])",
            "legendFormat": "{{ name }} - RX"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{name=~\".+\"}[5m])",
            "legendFormat": "{{ name }} - TX"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "yAxes": [
          {
            "unit": "bytes/sec"
          }
        ]
      },
      {
        "id": 4,
        "title": "Container Disk I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_fs_reads_bytes_total{name=~\".+\"}[5m])",
            "legendFormat": "{{ name }} - Read"
          },
          {
            "expr": "rate(container_fs_writes_bytes_total{name=~\".+\"}[5m])",
            "legendFormat": "{{ name }} - Write"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "yAxes": [
          {
            "unit": "bytes/sec"
          }
        ]
      },
      {
        "id": 5,
        "title": "Running Containers",
        "type": "singlestat",
        "targets": [
          {
            "expr": "count(container_last_seen{name=~\".+\"})",
            "legendFormat": "Total"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Total Memory Usage",
        "type": "singlestat",
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{name=~\".+\"}) / 1024 / 1024 / 1024",
            "legendFormat": "GB"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 16
        },
        "valueMaps": [
          {
            "value": "null",
            "text": "0"
          }
        ]
      },
      {
        "id": 7,
        "title": "Container Restarts",
        "type": "table",
        "targets": [
          {
            "expr": "container_start_time_seconds{name=~\".+\"}",
            "legendFormat": "{{ name }}",
            "format": "table"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 8,
        "title": "Container Status",
        "type": "table",
        "targets": [
          {
            "expr": "container_last_seen{name=~\".+\"}",
            "legendFormat": "{{ name }}",
            "format": "table"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}
