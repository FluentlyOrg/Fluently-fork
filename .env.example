# Environment variables for Docker Compose deployment
# Copy this file to .env and fill in your actual values

# Domain Configuration
DOMAIN=your-domain.com
CERT_NAME=your-domain.com

# Telegram Bot Configuration  
WEBHOOK_SECRET=your-webhook-secret-token

# ZeroTier Network IP (for internal access)
ZEROTIER_IP=

# Database Configuration (for backend service)
DB_USER=fluently_user
DB_PASSWORD=your-secure-password
DB_NAME=fluently_db

# Directus CMS Configuration
DIRECTUS_SECRET_KEY=your-directus-secret-key
DIRECTUS_ADMIN_EMAIL=admin@yourdomain.com
DIRECTUS_ADMIN_PASSWORD=your-admin-password

# Swagger Documentation Host
SWAGGER_HOST=your-domain.com:8070 